{
  "extends": ["eslint:recommended", "plugin:prettier/recommended", "prettier"],
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "globals": {
    "appRoot": true
  },
  "plugins": ["prettier"],
  "rules": {
    "quotes": [2, "double", { "avoidEscape": true }],
    "import/extensions": "off",
    "no-console": "off",
    "no-underscore-dangle": "off",
    "camelcase": "off",
    "operator-linebreak": "off"
  }
}
